<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".secondFragment">

    <LinearLayout
            android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/alim"
                android:gravity="bottom"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#6A000000"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="M. Alim Tajri "
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/edi"
                android:gravity="bottom"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#6A000000"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Edi Dwi Supratiyan"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/egi"
                android:gravity="bottom"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#6A000000"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Eggy Fernando S."
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/huda"
                android:gravity="bottom"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#6A000000"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Khoirul Huda"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</FrameLayout>